@model IEnumerable<ExamScoringApp.Models.QuestionVM>
@using ExamScoringApp.Helpers
@{
    ViewBag.Title = "Index";
    var examId = Request.QueryString["examId"];
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Index</h2>
        <ol class="breadcrumb">
            <li class="active">
                <strong>Question</strong>
            </li>
        </ol>
    </div>
</div>


<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>List of Questions</h5>
                
                    <div class="ibox-tools">
                        @if (User.IsInRole("Admin"))
                        {
                            @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary btn-xs" })
                        }
                    </div>
                </div>
                <div class="ibox-content">

                    <table id="table" class="table data-table table-striped">
                        <thead>
                            <tr>
                                <th>
                                    No
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ExamId)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Text)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Points)
                                </th>
                                <th style="width: 30%;"> Manage</th>
                            </tr>
                        </thead>
                        @{ int i = 1;}
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => i)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Exam.Course)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Text)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Points)
                                </td>
                                <td>

                                    @Html.ActionLink("Details", "Details", new { id = item.Id, examId = examId }, new { @class = "btn btn-info btn-xs" })

                                    @if (User.IsInRole("Admin"))
                                    {

                                        @Html.ActionLink("Edit", "Edit", new { id = item.Id, examId = examId }, new { @class = "btn btn-warning btn-xs" })

                                        @Html.ActionLink("Delete", "Delete", new { id = item.Id, examId = examId }, new { @class = "btn btn-danger btn-xs" })
                                    }





                                </td>
                            </tr>
                            i++;
                        }

                    </table>

                </div>
            </div>
        </div>
    </div>
</div>



